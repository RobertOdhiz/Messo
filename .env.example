# BulkSMS.com JSON API (recommended) – get token/secret from Settings > Advanced > API Tokens
BULKSMS_BASE_URL=https://api.bulksms.com/v1
BULKSMS_TOKEN=
BULKSMS_SECRET=

# FastHub BulkSMS API (Tanzania) – https://bulksms.fasthub.co.tz
FASTHUB_API_URL=https://bulksms.fasthub.co.tz
FASTHUB_CLIENT_ID=
FASTHUB_CLIENT_SECRET=
# Sender ID (required by FastHub) – shortcode or alphanumeric name
FASTHUB_SOURCE=

# SQLite (created on startup; migrations run automatically)
DATABASE_URL=sqlite:///./messo.db

# Base URL for links and DLR callback (must be public for FastHub to POST delivery reports)
BASE_URL=http://localhost:8000
# Optional: override full DLR callback URL (default: {BASE_URL}/webhook/fasthub/dlr)
# FASTHUB_DLR_CALLBACK_URL=https://your-domain.com/webhook/fasthub/dlr
